Name: Arcade test bouncing
Start {
	clr(c003)
	b = 1
}

Update {
	if (b == 1) {
		a = 10
		while (a > 0) {
			write(a + " <=", 0, 10 * a, c330)
			a--
		}
		
		write("Completed!", 50, 5, c300)
		b = 0
	}
}

BounceStart {
	clr(c003)
	x = 0
	y = 0
	h = 1
	v = 1
}

BounceUpdate {
	clr(c003)
	
	x+=h
	y+=v
	if (x>256-16) {
		h=-h
	}
	if (y>160-10) {
		v=-v
	}
	if (x<0) {
		h=-h
	}
	if (y<0) {
		v=-v
	}
	box(x,y, x+16,y+10, c320, c330)
}
Name: Arcade test bouncing
Start {
	clr(c003)
	a = 10
	write(a, 50, 5, c300)
	a = a * 0.25
	write(a, 50, 15, c300)
	a = a_i
	write(a, 50, 25, c300)
}

Update {
}

BounceStart {
	clr(c003)
	x = 0
	y = 0
	h = 1
	v = 1
}

BounceUpdate {
	clr(c003)
	
	x+=h
	y+=v
	if (x>256-16) {
		h=-h
	}
	if (y>160-10) {
		v=-v
	}
	if (x<0) {
		h=-h
	}
	if (y<0) {
		v=-v
	}
	box(x,y, x+16,y+10, c320, c330)
}
Name: Shadow of the Beast
/* Layers

7 mountains
6 grassu
5 trresu
4 grassm
3 treesd 
2 grassd
1 char
0 front

	xpm
	xpgu
	xptu
	xpgm
	xptd
	xpgd
	xpf

*/


Start {
	wait(.1)
	clr(c133)
	for(i=0,i<12,i++) {
		sp[i] = Label("PlayerSprite"+i)
		sprite(0, sp[i], 0)
	}

	box(0,128,320,180,c152, c152)
	write("Shadow of the Beast", 8,1,c301)
	spos(0, 150-16, 120)
	spen(0,1)
	t=0
	xpm=0
	xpgu=0
	xpgm=0
	xpgd=0
	xptu=0
	xptd=0
	xpf=0
	Tilemap(1, 7, Mountains:)
	TilePos(1, 0, 84)
	Tilemap(2, 6, GrassU:)
	TilePos(2, 0, 132)
	Tilemap(3, 5, TreesU:)
	TilePos(3, 0, 14)
	Tilemap(4, 4, GrassM:)
	TilePos(4, 0, 148)
	Tilemap(5, 3, TreesD:)
	TilePos(5, 0, 156)
	Tilemap(6, 2, GrassD:)
	TilePos(6, 0, 164)
	spri(0,1)
	Tilemap(7, 0, Front:)
	TilePos(7, 0, 148)
	
	y=100
	
	
	
	size40 = 40*64-320
	size45 = 45*64-320

	
	for(i=0,i<320,i+=8) {
		image(background:+2, i, 68, 8, 64)
	}
	image(moon:+2, 220, 8, 48, 48)
}

update {
	if (keyud) y-=1
	if (keydd) y+=1
//	spri(0, y)
	write(" " + y + " ", 0, 0, c550, c005)
	


	movement = 0
	dir = 0
	if (keyl) {
		movement = 1
		dir = -1
		srot(0,0,-1)
		spos(0, 150+16, 120)
	}
	if (keyr) {
		movement = 1
		dir = 1
		srot(0,0,0)
		spos(0, 150-16, 120)
	}
	
	if (!movement) sprite(0, sp[6], 0)
	else {
		t+=2 * deltatime
		i = 12 * t
		if (t>1) t-=1
		sprite(0, sp[i % 12], 0)
		xpm-=dir * 120 * deltaTime
		xpgu-=dir * 135 * deltaTime
		xptu-=dir * 150 * deltaTime
		xpgm-=dir * 165 * deltaTime
		xptd-=dir * 180 * deltaTime
		xpgd-=dir * 205 * deltaTime
		xpf-=dir * 220 * deltaTime
	}

	// Mountains
	TilePos(1, xpm, 84)
	if (xpm < -size45) xpm+=size45
	if (xpm > 0) xpm-=size45

	// GrassUp
	TilePos(2, xpgu, 132)
	if (xpgu < -size40) xpgu+=size40
	if (xpgu > 0) xpgu-=size40

	// TreesUp
	TilePos(3, xptu, 14)
	if (xptu < -size40) xptu+=size40
	if (xptu > 0) xptu-=size40

	// GrassUp
	TilePos(4, xpgm, 148)
	if (xpgm < -size40) xpgm+=size40
	if (xpgm > 0) xpgm-=size40

	// TreesDown
	TilePos(5, xptd, 42)
	if (xptd < -size40) xptd+=size40
	if (xptd > 0) xptd-=size40

	// GrassDown
	TilePos(6, xpgd, 164)
	if (xpgd < -size40) xpgd+=size40
	if (xpgd > 0) xpgd-=size40

	// Front
	TilePos(7, xpf, 148)
	if (xpf < -size40) xpf+=size40
	if (xpf > 0) xpf-=size40
}

Config {
	screen(320,180)
	ram(1k)
}

